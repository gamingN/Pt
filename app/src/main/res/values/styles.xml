<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--warehouse tablayout 样式
    1.tabIndicatorColor：TabLayout指示器的颜色
    2.tabTextColor: tab默认字体的颜色
    3.tabSelectedTextColor：当前选择的tab的字体颜色
    4.tabBackground：背景
    5.tabIndicatorHeight：TabLayout指示器高度
    -->
    <style name="CustomTab" parent="Widget.Design.TabLayout" >
        <item name="tabTextColor">@color/tl_warehouse_item_normal</item>
        <item name="tabSelectedTextColor">@color/tl_warehouse_item_select</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
